{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowJs": false,
    "resolveJsonModule": true,
    "noEmit": false,
    "noEmitOnError": true,
    "types": [
      "node",
      "express"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "baseUrl": "src"
  },
  "include": [
    "src",
    "src/types"
  ],
  "exclude": [
    "node_modules"
  ]
}